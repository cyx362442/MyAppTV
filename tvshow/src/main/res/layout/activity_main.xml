<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="5dp"
    tools:context="com.duowei.tvshow.MainActivity">
    <include
        android:id="@+id/view_movie"
        layout="@layout/layout_item_view"
        android:layout_width="220dp"
        android:layout_height="180dp"
        android:layout_centerVertical="true">
        <requestFocus/>
    </include>
    <include
        android:id="@+id/view_image"
        layout="@layout/layout_item_view_two"
        android:layout_width="220dp"
        android:layout_height="180dp"
        android:layout_toRightOf="@+id/view_movie"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true">
    </include>
    <include
        android:id="@+id/view_setting"
        android:layout_width="220dp"
        android:layout_height="180dp"
        layout="@layout/layout_item_view_three"
        android:layout_toRightOf="@+id/view_image"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true">
    </include>
</RelativeLayout>
